<body>
    <h1>Ajout dans la base de données</h1>
    <p>Veuillez remplir les attributs de l'intervention</p>
    <br/><br/>
    <form action="/mysql/insert/intervention" method="POST">
	  <div class="submitSQLRequest">
		<label for="idInterv">ID : <%= idvalue %></label>
		<input type="hidden" name="idinterv" id="idInterv" value="<%= idvalue %>"/>
	  </div>
	  <div class="submitSQLRequest">
		  <label for="typeInterv">Type de contrat</label>
        <select id="typeInterv" name="type">
			<option value="Forfaitaire">Forfaitaire</option>
			<option value="Non-forfaitaire">Non-forfaitaire</option>
		</select>
	  </div>
	  <div class="submitSQLRequest">
		<label for="idClient">ID client</label>
        <select id="idClient" name="idclient">
		<% if (JSON.stringify(result)!=JSON.stringify([])) { %>
			<% result.forEach(element => { %>
			<option value="<%= element.idclient %>"><%= element.idclient %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>
	  <div class="submitSQLRequest">
		<label for="idTechn">ID technicien</label>
        <select id="idTechn" name="idtechn">
		<% if (JSON.stringify(result2)!=JSON.stringify([])) { %>
			<% result2.forEach(element => { %>
			<option value="<%= element.idtechn %>"><%= element.idtechn %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>
	  <div class="submitSQLRequest">
		<label for="remarqueInterv">Remarques : </label>
		<input id="remarqueInterv" name="remarque" maxlength="45" />
	  </div>



		<br><br>
        <input type="submit" value="Submit">
    </form>

    <% console.log("\nFélicitations, vous êtes connecté à la page AjoutIntervention !\n") %> 
</body>