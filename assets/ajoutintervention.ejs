<body>
    <h1>Ajout dans la base de données</h1>
    <p>Veuillez remplir les attributs de l'intervention</p>
    <br/><br/>
    <form action="/mysql/insert/client" method="POST">
	  <div class="submitSQLRequest">
		ID : <%= idvalue %>
	  </div>
	  <div class="submitSQLRequest">Type de contrat</label>
        <select id="submitSQLRequest">
			<option>Forfaitaire</option>
			<option>Non-forfaitaire</option>
		</select>
	  </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">ID client</label>
        <select id="submitSQLRequest">
		<% if (JSON.stringify(result)!=JSON.stringify([])) { %>
			<% result.forEach(element => { %>
			<option><%= element.idclient %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">ID technicien</label>
        <select id="submitSQLRequest">
		<% if (JSON.stringify(result2)!=JSON.stringify([])) { %>
			<% result2.forEach(element => { %>
			<option><%= element.idtechn %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">Remarques : </label>
		<input id="remarque" maxlength="45" required />
	  </div>



		<br><br>
        <input type="submit" value="Submit">
    </form>

    <% console.log("\nFélicitations, vous êtes connecté à la page AjoutIntervention !\n") %> 
</body>