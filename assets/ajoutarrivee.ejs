<body>
    <h1>Ajout dans la base de données</h1>
    <p>Veuillez remplir les attributs de l'arrivée</p>
    <br/><br/>
    <form action="/mysql/insert/arrivee" method="POST">
	  <div class="submitSQLRequest">
		<label for="idInterv">ID de l'intervention</label>
        <select id="idInterv" name="idinterv">
		<% if (JSON.stringify(result)!=JSON.stringify([])) { %>
			<% result.forEach(element => { %>
			<option value="<%= element.idinterv %>"><%= element.idinterv %></option>    
			<% }) %>
		<% } %>

		</select>
	  </div>
	  <div class="submitSQLRequest">
		<label for="immatriculationVoiture">Plaque d'immatriculation</label>
        <select id="immatriculationVoiture" name="immatriculation">
		<% if (JSON.stringify(result2)!=JSON.stringify([])) { %>
			<% result2.forEach(element => { %>
			<option value="<%= element.immatriculation %>"><%= element.immatriculation %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>

	  <div class="submitSQLRequest">
		<label for="dateArr">Date d'arrivée : </label>
		<input id="dateArr" name="date_arrivee" maxlength="45" required />
	  </div>
	  <div class="submitSQLRequest">
		<label for="kilometrageVoiture">Kilométrage (nombre entier) : </label>
		<input id="kilometrageVoiture" name="kilometrage" type="number" step="1" required />
	  </div>

		<br><br>
        <input type="submit" value="Submit">
    </form>

    <% console.log("\nFélicitations, vous êtes connecté à la page AjoutArrivee !\n") %> 
</body>