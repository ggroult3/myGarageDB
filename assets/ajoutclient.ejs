<body>
    <h1>Ajout dans la base de données</h1>
    <p>Veuillez remplir les attributs du client</p>
    <br/><br/>
    <form action="/mysql/insert/client" method="POST">
	  <div class="submitSQLRequest">
		ID : <%= idvalue %>
	  </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">Nom : </label>
		<input id="nom" required />
	  </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">Prénom : </label>
		<input id="prenom" required />
	  </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">Commune</label>
        <select id="submitSQLRequest">
		<% if (JSON.stringify(result)!=JSON.stringify([])) { %>
			<% result.forEach(element => { %>
			<option><%= element.nom %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>
	  <div class="submitSQLRequest">
		<label for="submitSQLRequest">ID administrateur</label>
        <select id="submitSQLRequest">
		<% if (JSON.stringify(result2)!=JSON.stringify([])) { %>
			<% result2.forEach(element => { %>
			<option><%= element.idadm %></option>    
			<% }) %>

		<% } %>

		</select>
      </div>



		<br><br>
        <input type="submit" value="Submit">
    </form>

    <% console.log("\nFélicitations, vous êtes connecté à la page AjoutClient !\n") %> 
</body>